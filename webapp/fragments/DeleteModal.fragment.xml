<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
>
    <Dialog
            id="deleteDialog"
            title="Deleting"
            type="Message"
    >
        <content><Text text="{modalMessage>/text}"/></content>
        <beginButton>
            <Button
                    text="{i18n>deleteText}"
                    press=".onDialogDelete"/>
        </beginButton>
        <endButton>
            <Button
                    text="{i18n>closeText}"
                    press=".onDialogClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>

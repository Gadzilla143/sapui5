<mvc:View
        controllerName="sap.ui.demo.walkthrough.controller.Detail"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:c="sap.ui.core"
        xmlns:f="sap.ui.layout.form">
    <Page
            title="{i18n>detailPageTitle}"
            showNavButton="{= !${state>/edit}}"
            navButtonPress=".onNavBack">
        <OverflowToolbar class="overflow-paddings" height="60px" visible="{= !${state>/edit}}">
            <Title
                text="{data>/ProductName}"
            />
            <ToolbarSpacer/>
            <Button
                    type="Reject"
                    tooltip="{i18n>deleteText}"
                    icon="sap-icon://delete"
                    press=".onDelete"
                    ariaDescribedBy="rejectButtonDescription genericButtonDescription"
            />
            <Button
                    icon="sap-icon://edit"
                    enabled="true"
                    press=".switchEditMode"
            />
        </OverflowToolbar>
        <VBox id="formContainer" >
        <f:SimpleForm id="SimpleFormDisplay480"
                      editable="true"
                      columnsM="2"
                      columnsL="2"
                      columnsXL="2"
                      layout="ColumnLayout"
                      title="{i18n>Id}: {data>/ID}"
        >
        <f:content>
            <c:Title text="" />
            <Label text="Name" />
            <Input
                name="Name"
                value="{data>/ProductName}"
                change=".onInputChange"
                editable="{state>/edit}"
            />
            <Label text="Supplier" />
            <Input
                name="Supplier"
                value="{data>/ShipperName}"
                change=".onInputChange"
                editable="{state>/edit}"
            />
            <Label text="Price {view>/currency}" />
            <Input
                name="Price"
                type="Number"
                value="{data>/ExtendedPrice}"
                change=".onInputChange"
                editable="{state>/edit}"
            />
            <c:Title text="" />
            <Label text="{i18n>quantityTitle}" />
            <Input
                name="Quantity"
                type="Number"
                value="{data>/Quantity}"
                change=".onInputChange"
                editable="{state>/edit}"
            />
            <Label text="{i18n>dateTitle}" />
            <Text text="{
			    	path: 'data>/ShippedDate',
			    	type: 'sap.ui.model.type.Date',
			    	formatOptions: {
			    	  style: 'long',
			    	  source: {
			    		pattern: 'yyyy-MM-ddTHH:mm:ss'
			    	  }
			    	}
			    }" />
            <Label text="{i18n>invoiceStatusLabel}" />
            <Text text="{data>/Status}" />
            </f:content>
            </f:SimpleForm>
            <Table
                id="consumerList"
                class="sapUiResponsiveMargin"
                width="auto"
                mode="{= ${state>/edit} ? 'MultiSelect' : 'None' }"
                selectionChange=".onSelection"
                items="{
			    path : '/Consumers',
		        	sorter : {
		        		path : 'ID',
		        		group : false
		        	}
		        }"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>consumersTitle}"/>
                        <ToolbarSpacer/>
                        <Button
                            type="Accept"
                            icon="sap-icon://add"
                            visible="{state>/edit}"
                            tooltip="{i18n>createText}"
                            press=".onCreateCustomer"
                            ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                        />
                        <Button
                            type="Reject"
                            icon="sap-icon://delete"
                            visible="{state>/edit}"
                            enabled="{view>/selected}"
                            tooltip="{i18n>deleteText}"
                            press=".onDeleteCustomer"
                            ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>columnName}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>columnStatus}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <VBox>
                                <ObjectIdentifier visible="{=!${state>/edit}}" title="{Name}"/>
                                <Input
                                        name="Supplier Name"
                                        change=".onInputChange"
                                        value="{Name}"
                                        visible="{state>/edit}"
                                />
                            </VBox>

                            <VBox>
                                <Text visible="{=!${state>/edit}}" text="{Status}"/>
                                <ComboBox
                                        id="statuses"
                                        type="Text"
                                        value="{Status}"
                                        visible="{state>/edit}">
                                    <items>
                                        <c:Item key="001" text="New"/>
                                        <c:Item key="002" text="Old"/>
                                        <c:Item key="003" text="In progress"/>
                                    </items>
                                </ComboBox>
                            </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
        <footer>
            <OverflowToolbar visible="{state>/edit}">
                <Button
                   id="messagePopoverBtn"
                   visible="{=!!${message>/}.length}"
                   icon="sap-icon://error"
                   type="Negative"
                   press=".handleMessagePopoverPress"
                   ariaHasPopup="Dialog"
                />
                <ToolbarSpacer/>
                <Button
                   type="Accept"
                   text="{i18n>saveText}"
                   enabled="{=!${message>/}.length}"
                   press=".onSave"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <Button
                   type="Reject"
                   text="{i18n>cancelText}"
                   press=".onCancel"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>

<mvc:View
        controllerName="sap.ui.demo.walkthrough.controller.Detail"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:c="sap.ui.core"
        xmlns:f="sap.ui.layout.form">
    <Page
            title="{i18n>detailPageTitle}"
            showNavButton="{= !${state>/edit}}"
            navButtonPress=".onNavBack">
            <OverflowToolbar visible="{= !${state>/edit}}">
                <ToolbarSpacer/>
                <Button
                        type="Reject"
                        text="{i18n>deleteText}"
                        press=".onDelete"
                        ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <ToggleButton
                        text="{i18n>editText}"
                        enabled="true"
                        pressed="false"
                        press=".switchEditMode"
                />
            </OverflowToolbar>
        <ObjectHeader
                responsive="true"
                fullScreenOptimized="true"
                intro="{data>/ShipperName}"
                title="{data>/ProductName}"
        >
        </ObjectHeader>
        <VBox id="formContainer" fitContainer="true">
        <f:SimpleForm id="SimpleFormDisplay480"
                      minWidth="1024"
                      maxContainerCols="2"
                      editable="false"
                      layout="ResponsiveGridLayout"
                      title="{i18n>Id}: {data>/ID}"
                      labelSpanL="4"
                      labelSpanM="4"
                      emptySpanL="0"
                      emptySpanM="0"
                      columnsL="2"
                      columnsM="2">
        <f:content>
            <c:Title text="" />
            <Label text="Name" />
            <Input
                name="Name"
                value="{data>/ProductName}"
                editable="{state>/edit}"
            />
            <Label text="Supplier" />
            <Input
                name="Supplier"
                value="{data>/ShipperName}"
                editable="{state>/edit}"
            />
            <Label text="Price {view>/currency}" />
            <Input
                name="Price"
                type="Number"
                value="{data>/ExtendedPrice}"
                editable="{state>/edit}"
            />
            <c:Title text="" />
            <Label text="{i18n>quantityTitle}" />
            <Input
                name="Quantity"
                type="Number"
                value="{data>/Quantity}"
                editable="{state>/edit}"
            />
            <Label text="{i18n>dateTitle}" />
            <Text text="{
			    	path: 'data>/ShippedDate',
			    	type: 'sap.ui.model.type.Date',
			    	formatOptions: {
			    	  style: 'long',
			    	  source: {
			    		pattern: 'yyyy-MM-ddTHH:mm:ss'
			    	  }
			    	}
			    }" />
            <Label text="{i18n>invoiceStatusLabel}" />
            <Text text="{data>/Status}" />
            </f:content>
            </f:SimpleForm>
        </VBox>
        <footer>
            <OverflowToolbar visible="{state>/edit}">
                <Button
                   id="messagePopoverBtn"
                   visible="{=!!${message>/}.length}"
                   icon="sap-icon://error"
                   type="Negative"
                   press=".handleMessagePopoverPress"
                   ariaHasPopup="Dialog"
                />
                <ToolbarSpacer/>
                <Button
                   type="Accept"
                   text="{i18n>saveText}"
                   press=".onSave"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <ToolbarSpacer/>
                <Button
                   type="Reject"
                   text="{i18n>cancelText}"
                   press=".onCancel"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>

<mvc:View
        controllerName="sap.ui.demo.walkthrough.controller.Detail"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:c="sap.ui.core"
        xmlns:f="sap.ui.layout.form">
    <Page
            title="{i18n>detailPageTitle}"
            showNavButton="true"
            navButtonPress=".onNavBack">
        <ObjectHeader
                responsive="true"
                fullScreenOptimized="true"
                intro="{data>/ShipperName}"
                title="{data>/ProductName}"
        >
        </ObjectHeader>
        <VBox fitContainer="true">
        <f:SimpleForm id="SimpleFormDisplay480"
                      minWidth="1024"
                      maxContainerCols="2"
                      editable="false"
                      layout="ResponsiveGridLayout"
                      title="{i18n>Id}: {data>/ID}"
                      labelSpanL="4"
                      labelSpanM="4"
                      emptySpanL="0"
                      emptySpanM="0"
                      columnsL="2"
                      columnsM="2">
        <f:content>
            <c:Title text="" />
            <Label text="Name" />
            <Input
                value="{data>/ProductName}"
                editable="{state>/edit}"
            />
            <Label text="Supplier" />
            <Input
                value="{data>/ShipperName}"
                editable="{state>/edit}"
            />
            <Label text="Price {view>/currency}" />
            <Input
                value="{data>/ExtendedPrice}"
                editable="{state>/edit}"
            />
            <c:Title text="" />
            <Label text="{i18n>quantityTitle}" />
            <Input
                value="{data>/Quantity}"
                editable="{state>/edit}"
            />
            <Label text="{i18n>dateTitle}" />
            <Text text="{
			    	path: 'data>/ShippedDate',
			    	type: 'sap.ui.model.type.Date',
			    	formatOptions: {
			    	  style: 'long',
			    	  source: {
			    		pattern: 'yyyy-MM-ddTHH:mm:ss'
			    	  }
			    	}
			    }" />
            <Label text="{i18n>invoiceStatusLabel}" />
            <Input
                value="{data>/Status}"
                editable="{state>/edit}"
            />
            </f:content>
            </f:SimpleForm>
        </VBox>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToggleButton
                   text="{i18n>editText}"
                   enabled="true"
                   pressed="false"
                   press=".switchEditMode"
                   visible="{= !${state>/edit}}"
                />
                <Button
                   type="Accept"
                   text="{i18n>saveText}"
                   press=".switchEditMode"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                   visible="{state>/edit}"
                />
                <ToolbarSpacer/>
                <Button
                   type="Reject"
                   text="{i18n>deleteText}"
                   press=".onDelete"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                   visible="{= !${state>/edit}}"
                />
                <Button
                   type="Reject"
                   text="{i18n>cancelText}"
                   press=".onCancel"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                   visible="{state>/edit}"
                />
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>

<mvc:View
        controllerName="sap.ui.demo.walkthrough.controller.Detail"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:c="sap.ui.core"
        xmlns:f="sap.ui.layout.form">
    <Page
            title="{i18n>detailPageTitle}"
            showNavButton="{= !${state>/edit}}"
            navButtonPress=".onNavBack">
        <OverflowToolbar  class="overflow-paddings" height="70px" visible="{= !${state>/edit}}">
            <Title
                text="{data>/ProductName}"
            />
            <ToolbarSpacer/>
            <Button
                    type="Reject"
                    tooltip="{i18n>deleteText}"
                    icon="sap-icon://delete"
                    press=".onDelete"
                    ariaDescribedBy="rejectButtonDescription genericButtonDescription"
            />
            <Button
                    text="{i18n>editText}"
                    enabled="true"
                    press=".switchEditMode"
            />
        </OverflowToolbar>
        <VBox id="formContainer" fitContainer="true">
        <f:SimpleForm id="SimpleFormDisplay480"
                      editable="true"
                      columnsM="2"
                      columnsL="2"
                      columnsXL="2"
                      layout="ColumnLayout"
                      title="{i18n>Id}: {data>/ID}"
        >
        <f:content>
            <c:Title text="" />
            <Label text="Name" />
            <Input
                name="Name"
                value="{data>/ProductName}"
                editable="{state>/edit}"
            />
            <Label text="Supplier" />
            <Input
                name="Supplier"
                value="{data>/ShipperName}"
                editable="{state>/edit}"
            />
            <Label text="Price {view>/currency}" />
            <Input
                name="Price"
                type="Number"
                value="{data>/ExtendedPrice}"
                editable="{state>/edit}"
            />
            <c:Title text="" />
            <Label text="{i18n>quantityTitle}" />
            <Input
                name="Quantity"
                type="Number"
                value="{data>/Quantity}"
                editable="{state>/edit}"
            />
            <Label text="{i18n>dateTitle}" />
            <Text text="{
			    	path: 'data>/ShippedDate',
			    	type: 'sap.ui.model.type.Date',
			    	formatOptions: {
			    	  style: 'long',
			    	  source: {
			    		pattern: 'yyyy-MM-ddTHH:mm:ss'
			    	  }
			    	}
			    }" />
            <Label text="{i18n>invoiceStatusLabel}" />
            <Text text="{data>/Status}" />
            </f:content>
            </f:SimpleForm>
        </VBox>
        <footer>
            <OverflowToolbar visible="{state>/edit}">
                <Button
                   id="messagePopoverBtn"
                   visible="{=!!${message>/}.length}"
                   icon="sap-icon://error"
                   type="Negative"
                   press=".handleMessagePopoverPress"
                   ariaHasPopup="Dialog"
                />
                <ToolbarSpacer/>
                <Button
                   type="Accept"
                   text="{i18n>saveText}"
                   press=".onSave"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <ToolbarSpacer/>
                <Button
                   type="Reject"
                   text="{i18n>cancelText}"
                   press=".onCancel"
                   ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>

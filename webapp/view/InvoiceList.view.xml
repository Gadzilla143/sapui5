<mvc:View
        controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core">
    <Panel accessibleRole="Region">
    <Table
            id="invoiceList"
            class="sapUiResponsiveMargin"
            width="auto"
            mode="MultiSelect"
            selectionChange=".onSelection"
            items="{
			path : '/Invoices',
		    	sorter : {
		    		path : 'ID',
		    		group : false
		    	}
		    }">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>invoiceListTitle}"/>
                <ToolbarSpacer/>
                <Button
                        type="Accept"
                        press=".onCreate"
                        tooltip="{i18n>createText}"
                        icon="sap-icon://create"
                        ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <Button
                        type="Reject"
                        icon="sap-icon://delete"
                        enabled="{view>/selected}"
                        tooltip="{i18n>deleteText}"
                        press=".onDelete"
                        ariaDescribedBy="rejectButtonDescription genericButtonDescription"
                />
                <MultiComboBox
                        id="slStatus"
                        placeholder="{i18n>invoiceStatusLabel}"
                        type="Text"
                        selectionChange=".onFilterChange"
                        width="250px">
                    <items>
                        <core:Item key="C" text="Done"/>
                        <core:Item key="B" text="In Progress"/>
                        <core:Item key="A" text="New"/>
                    </items>
                </MultiComboBox>
                <ComboBox
                        id="slSupplier"
                        placeholder="{i18n>invoiceSupplierLabel}"
                        type="Text"
                        showClearIcon="true"
                        change=".onFilterChange"
                        width="150px">
                    <items>
                        <core:Item key="001" text="ACME"/>
                        <core:Item key="002" text="Fun Inc."/>
                    </items>
                </ComboBox>
                <SearchField id="slProductName" width="20%" search=".onFilterChange"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column
                    hAlign="End"
                    demandPopin="true"
                    width="5em">
                <Text text="{i18n>columnQuantity}"/>
            </Column>
            <Column>
                <Text text="{i18n>columnName}"/>
            </Column>
            <Column
                    minScreenWidth="Small"
                    demandPopin="true">
                <Text text="{i18n>columnStatus}"/>
            </Column>
            <Column
                    minScreenWidth="Tablet"
                    demandPopin="false">
                <Text text="{i18n>columnSupplier}"/>
            </Column>
            <Column
                    hAlign="End">
                <Text text="{i18n>columnPrice}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem
                    type="Navigation"
                    press=".onPress">
                <cells>
                    <ObjectNumber number="{Quantity}" emphasized="false"/>
                    <ObjectIdentifier title="{ProductName}"/>
                    <Text text="{Status}"/>
                    <Text text="{ShipperName}"/>
                    <ObjectNumber
                            number="{
							parts: [{path: 'ExtendedPrice'}, {path: 'view>/currency'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {
								showMeasure: false
							}
						}"
                            unit="{view>/currency}"
                            state="{= ${ExtendedPrice} > 50 ? 'Error' : 'Success' }"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    </Panel>
</mvc:View>
